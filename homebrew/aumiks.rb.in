class Aumiks < Formula
  desc "C++ cross-platform audio mixer library."
  homepage "https://github.com/igagis/aumiks"
  url "https://github.com/igagis/aumiks/archive/$(version).tar.gz"
  sha256 "$(sha256)"

  depends_on "prorab" => :build
  depends_on "libaudout"
  depends_on "libpapki"
  
  def install
    ENV['PATH'] += ':/usr/local/bin'
    system "make", "install", "PREFIX=#{prefix}"
    system "rm", "#{prefix}/bin/tests"
    system "rm", "#{prefix}/include/dummy.hpp"
  end

  #test do
  #  system "make", "test"
  #end
end
